<%= form_for([ @reading]) do |form| %>

  <% if @reading.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@reading.errors.count, "error") %> prohibited
        this reading from being saved:
      </h2>
      <ul>
        <% @reading.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group">
  <div class="row">
        <div class="col-md-3">
  <%= form.label :title %>
  <%= form.text_field :title, class: "form-control" %>
</div>
</div>
 <div class="row">
        <div class="col-md-3">
  <%= form.label "Blood Sugar in mg/dl" %>
  <%= form.number_field :blood_sugar, class: "form-control" %> 
</div>
</div>
 <div class="row">
        <div class="col-md-3">
  <%= form.label :readed_date %>
  <%= form.datetime_field :readed_date, class: "form-control" %> 
</div>
</div>
  <%= form.submit class: "btn btn-primary" %>
</div>

<% end %>